extends layout

block content
  h1= title
  p Welcome to #{title}
    div.text-center
        form(class="form-signin", method="POST", action="/users/login")
            #error
                if error
                    p.text-danger Błąd logowania...
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Zaloguj się
            label(for="inputEmail" class="sr-only") Adres e-mail
            input(type="email" name="username" id="inputEmail" class="form-control" placeholder="Adres e-mail" required autofocus)
            label(for="inputPassword" class="sr-only") Hasło
            input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Hasło" required)
            - var divClasses=['checkbox', 'mb-3'];
            div(class=divClasses)
                label
                    span Zapamiętaj 
                    input(type="checkbox" value="remember-me")
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Zaloguj
            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) Mateusz Wypchlak © 2022
